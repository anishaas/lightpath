<div class = 'courses'>
    <h3> Your Courses </h3>
    <%@courses.each do |course|%>
    <p><%=link_to course.name, course_path(course)%></p>
    <%end%>
</div>

<div class = 'wrapper'>
  <div class = 'dashboardnav'>
    <h4>illuminate the path to mastery</h4>
    </div>
    <p id="notice"><%= notice %></p>

    <div class = 'lightbulbstats'>
      <h1><%=current_user.lightbulbs.count%></h1>
      <h6>Lightbulbs so far. Keep lighting!</h6>
    </div>

  <div class = 'submissions'>
    <h6> Recent Submissions </h6>
    <%@submissions.each do |submission|%>
