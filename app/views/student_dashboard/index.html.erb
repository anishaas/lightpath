<div class='row'>
<div class="col s3 card-panel teal" id="courses">
      <div class="col s12 m4 l11">
        <h3> Your Courses </h3>
        <p class='course'><%=link_to "#{@course_title}", course_path(@course)%></p>
      </div>
  </div>

  <%= notice%>
  <div class="col s9">
      <div class='row'>
          <div class="col s3 card-panel teal" id="lightbulbstats">
              <h1><%=current_user.lightbulbs.count%></h1>
              <h6><%="#{current_user.lightbulbs.count}"%> lightbulb moments so far. Keep lighting!</h6>
           </div>

           <div class="col s3 card-panel teal" id="lightbulbstats2">
               <h1><%=current_user.favorites.count%></h1>
               <h6><%="#{current_user.favorites.count}"%> lightbulbs favorited so far. Keep favoriting!</h6>
            </div>

          <div class="col s3 card-panel teal" id="box">
              <h1><%=current_user.sent_messages.count%></h1>
              <h6><%="#{current_user.sent_messages.count}"%> lightbulbs shared so far. Keep sharing!</h6>
           </div>
        </div>
        <div class="row">
          <div class="col s6 card-panel teal" id="submissions">
            <div id='headingnotifications'><h5> Recent Favorites </h5></div>
            <%if @displayfavorites != nil%>
            <%@displayfavorites.each do |favorite|%>
            <p><%=favorite.lightbulb.student.first_name%></p>
            <%end%>
            <%end%>
          </div>

          <div class= "col s6 card-panel teal" id="notifications">
            <div id='headingnotifications'><h5> Notifications </h5></div>
            <%if @submissions != nil%>
            <%@messages.each do |message|%>
            <div class= "row card-panel teal" id="notification">
              <img src ='http://s13.postimg.org/6n2pzw1zb/image.png'></img>
              <div id = 'sender'><%=message.sender.first_name + " " +"sent you a lightbulb and message:"%></div>
                <div id= 'messagebody'><%=message.body%></div>
                - <%=message.subject%>
           </div>
           <%end%>
           <%end%>
           <%@displayfavorites.each do |favorite|%>
           <div class= "row card-panel teal" id="notification">
             <img src ='http://s13.postimg.org/6n2pzw1zb/image.png'></img>
             <div id = 'sender'><%=favorite.student.first_name%> favorited your lightbulb from <%=favorite.lightbulb.assignment.title%></div>
          </div>
          <%end%>
          </div>
        </div>
    </div>
</div>
