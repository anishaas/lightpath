<link href="styles.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="css-pop.js"></script>

<div class = 'assignments'>
<%@assignments.each do |assignment|%>
  <h5><%=assignment.title%></h5>
  <p><%=assignment.description%></p>
  <div class = 'btn'><%=link_to 'Submit Assignment', new_assignment_submission_path(assignment)%></div>
  <a href= "#modal1" class="modal-trigger btn"><img src ='http://s13.postimg.org/6n2pzw1zb/image.png'></a>
  <a href= "#modal2" class="modal-trigger btn">View Lightbulbs!</a>
  <%= react_component('CreateLightBulbForm', assignmentID: assignment.id, courseID: assignment.course.id)%>
  <%end%>
</div>

<!-- Modal Structure -->


<div id="modal2" class="modal">
  <div class="modal-content">
    <h3>Lightbulb</h3>
    <p><%@assignments.first.lightbulbs.each do |lightbulb|%>
          <%if lightbulb.summary.present?%>
          <div className='form'>
            <p>
            <label htmlFor='Summary'>Summary</label>
            <input id='Summary' placeholder={'Summarize the concept in your own words'}
                size="50" type="string"
                onChange={this.changeSummary}
                value={this.state.Summary}
                className={this.state.className}/>
              </p>
            </div>
          <%=lightbulb.summary%>
            <%end%>
          <%if lightbulb.video_url.present?%>
            <p>Video URL:</p>
          <%=lightbulb.video_url%>
          <%end%>
      <%end%>
  </div
  <div class="modal-footer">
    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
  </div>
</div>
