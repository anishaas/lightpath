<link href="styles.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="css-pop.js"></script>

<div class = 'assignments'>
<%@assignments.each do |assignment|%>
  <h5><%=assignment.title%></h5>
  <p><%=assignment.description%></p>
    <a href= "#modal1" class= "modal-trigger btn">Create Lighbulb</a>
    <a href= "#modal2" class= "modal-trigger btn">View Lightbulbs</a>
  <%end%>
</div>

<!-- Modal Structure -->
<div id="modal1" class="modal">
  <div class="modal-content">
    <h3>Lightbulb</h3>
    <p><%@assignments.first.lightbulbs.each do |lightbulb|%>
        <%if lightbulb.summary.present?%>
          <p>Summary:</p>
        <%=lightbulb.summary%>
          <%end%>
        <%if lightbulb.video_url.present?%>
          <p>Video URL:</p>
        <%=lightbulb.video_url%>
        <%end%>
      <%end%>
  </div>
  <div class="modal-footer">
    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
  </div>
</div>

<div id="modal2" class="modal">
  <div class="modal-content">
    <h3>Lightbulb</h3>
    <p><%@assignments.first.lightbulbs.each do |lightbulb|%>
        <%if lightbulb.summary.present?%>
          <p>Summary:</p>
        <%=lightbulb.summary%>
          <%end%>
        <%if lightbulb.video_url.present?%>
          <p>Video URL:</p>
        <%=lightbulb.video_url%>
        <%end%>
      <%end%>
  </div>
  <div class="modal-footer">
    <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Close</a>
  </div>
</div>

